<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#37474F"
    >

    <TextView
        android:id="@+id/lblTitle"
        android:text="Flickr Photo App"
        android:textColor="#E91E63"
        android:textSize="40sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imgOne"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/one_pic"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="@id/lblTitle"
    />
    <Button
        android:id="@+id/btnOne"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="Top Locations"
        android:textSize="36px"
        android:textColor="#E91E63"
        android:background="#42A5F5"
        android:padding="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:id="@+id/btnTwo"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="Top Photos"
        android:textSize="36px"
        android:textColor="#E91E63"
        android:background="#42A5F5"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/btnOne"
        />
    <Button
        android:id="@+id/btnThree"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="Search"
        android:textSize="36px"
        android:textColor="#E91E63"
        android:background="#42A5F5"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/btnTwo"
        />


</RelativeLayout>